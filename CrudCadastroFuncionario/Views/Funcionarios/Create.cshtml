@model CrudCadastroFuncionario.Models.Funcionario

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro</h1>

<h4>Funcionario</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-offset-1 col-md-12 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">Nome:</label>
                        <span class="text-danger">*</span>
                        <input asp-for="Nome" class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-6 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">Cpf:</label>
                        <span class="text-danger">*</span>
                        <input id="cpf" asp-for="Cpf" class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-4 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">RG:</label>
                        <span class="text-danger">*</span>
                        <input asp-for="RG" class="form-control" required />
                    </div>
                </div>

                <div class="col-md-4 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">Orgão emissor do RG:</label>
                        <span class="text-danger">*</span>
                        <input asp-for="Emissor" class="form-control" required />
                    </div>
                </div>

                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">Titulo de eleitor:</label>
                        <span class="text-danger">*</span>
                        <input asp-for="TituloEleitor" class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-4 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">CNH:</label>
                        <input asp-for="CNH" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">Considerar como gestor?</label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" asp-for="Gestor">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-6 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">CEP:</label>
                        <span class="text-danger">*</span>
                        <input id="cep" asp-for="Endereco.Cep" class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-9 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">Endereço:</label>
                        <span class="text-danger">*</span>
                        <input asp-for="Endereco.Logradouro" class="form-control" required />
                    </div>
                </div>
                <div class="col-md-offset-1 col-md-3 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">Número:</label>
                        <span class="text-danger">*</span>
                        <input asp-for="Endereco.Numero" class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-6 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">Complemento:</label>
                        <input asp-for="Endereco.Complemento" class="form-control" />
                    </div>
                </div>
                <div class="col-md-offset-1 col-md-6 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">Bairro:</label>
                        <span class="text-danger">*</span>
                        <input asp-for="Endereco.Bairro" class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-6 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">Cidade:</label>
                        <span class="text-danger">*</span>
                        <input asp-for="Endereco.Cidade" class="form-control" required />
                    </div>
                </div>
                <div class="col-md-offset-1 col-md-6 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">Estado:</label>
                        <span class="text-danger">*</span>
                        <input asp-for="Endereco.Estado" class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-12 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <label class="labelInfo">Ponto Refencia:</label>
                        <input asp-for="Endereco.Referencia" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-sm-5 col-xs-12">
                <div class="form-group">
                    <label class="labelInfo">Ativo:</label>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="Ativo">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-4 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-success" />
                    </div>
                </div>
                <div class="col-md-offset-1 col-md-4 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                    </div>
                </div>
                <div class="col-md-offset-1 col-md-4 col-sm-5 col-xs-12">
                    <div class="form-group">
                        <a class="btn btn-primary" asp-action="Index">Mostrar Todos</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
